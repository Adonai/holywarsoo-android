<resources>

    <attr name="colorNonImportantText" format="reference" />
    <attr name="toolbarOverrideStyle" format="reference" />
    <attr name="toolbarPopupOverrideStyle" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/holywarsooForumContent</item>
        <item name="colorOnSecondary">@color/holywarsooForumText</item>
        <item name="colorNonImportantText">@color/holywarsooForumHintText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="toolbarOverrideStyle">@style/Theme.MaterialComponents.NoActionBar</item>
        <item name="toolbarPopupOverrideStyle">@style/Theme.MaterialComponents.Light.NoActionBar</item>
    </style>

    <!-- Drawer menu -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/holywarsooForumContent</item>
    </style>

    <style name="Ripple" />

    <style name="Ripple.Item">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

</resources>
